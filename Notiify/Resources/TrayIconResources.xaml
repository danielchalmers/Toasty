<ResourceDictionary x:Class="Notiify.Resources.TrayIconResources"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Notiify"
                    xmlns:tb="http://www.hardcodet.net/taskbar"
                    xmlns:p="clr-namespace:Notiify.Properties">
    <tb:TaskbarIcon x:Key="TrayIcon" IconSource="../icon.ico" ToolTipText="{x:Static p:Resources.AppName}"
                    TrayMouseDoubleClick="MenuItemShowNotifications_OnClick">
        <tb:TaskbarIcon.ContextMenu>
            <ContextMenu>
                <MenuItem Header="_Show Notifications" Click="MenuItemShowNotifications_OnClick" />
                <MenuItem Header="_Hide Notifications" Click="MenuItemHideNotifications_OnClick" />
                <Separator />
                <MenuItem Header="_Manage Sources" Click="MenuItemManageSources_OnClick" />
                <MenuItem Header="_Options" Click="MenuItemOptions_OnClick" />
                <Separator />
                <MenuItem Header="E_xit" Click="MenuItemExit_OnClick" />
            </ContextMenu>
        </tb:TaskbarIcon.ContextMenu>
    </tb:TaskbarIcon>
</ResourceDictionary>